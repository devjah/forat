<h1 class="text-center"><span class="red">ULTIMUL PAS!</span><br><span style="font-size:20px;">Completează ancheta cu datele tale personale*</span></h1>
<p class="info">*Datele personale vor fi păstrate strict confidențial</p>
<div class="row">
  <div class="col-sm-6">
    <%= form_for(@user) do |f| %>

      <div class="field">
        <%= f.label :name, "Nume" %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :phone, "Telefon*" %>
        <%= f.phone_field :phone %>
      </div>

      <div class="field">
        <%= f.label :email, "E-mail" %>
        <%= f.email_field :email %>
      </div>

      <br>
      <div class="actions text-center">
        <%= f.submit "", class: "btn-image btn-finalizeaza" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-md-6 column">
        <h3 class="name-on-card m"><%= current_user.name %></h3>
        <div class="card-content-m"></div>
        <div class="img-preview img-preview-m"></div>
      </div>
    </div>


<% if current_user.cards[0] %>

    <div class="img-container" style="width:1px; height:1px;">
      <%= image_tag current_user.cards.last.image.url(:normal), class: 'cropper' %>
    </div>

    <script type="text/javascript">
    $.fn.cropper
    $(".cropper").cropper({
      aspectRatio: 16 / 10,
      preview: ".img-preview",
             data: <%= current_user.cards.last.crop.gsub!('"', '') %>,
      done: function(data) {
        console.log($(".cropper").cropper("getData"));
      }
    });
    </script>

<%end%>

  </div>
</div>
